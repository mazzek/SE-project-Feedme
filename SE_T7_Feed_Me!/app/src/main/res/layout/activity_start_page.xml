<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".StartPage"
    android:background="#fffff3fe"
    android:id="@+id/StartLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FeedMe"
        android:id="@+id/WelcomeText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:textSize="64dp"
        android:textStyle="bold"
        android:textColor="#ff41f39a" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Welcome_FindFood"
        android:clickable="true"
        android:contentDescription="Find Food!"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ff41f39a" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/et2"
        android:layout_alignEnd="@+id/et2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="#ffcdcdcd"
        android:selectAllOnFocus="false"
        android:hint="PASSWORD" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et2"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/et"
        android:layout_centerHorizontal="true"
        android:hint="USERNAME"
        android:textColorHint="#ffcdcdcd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/login_button"
        android:layout_below="@+id/et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="#ff41f39a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/login_button"
        android:layout_above="@+id/Welcome_FindFood"
        android:layout_alignRight="@+id/et2"
        android:layout_alignEnd="@+id/et2"
        android:textColor="#fff7344d"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/CreateAccountButton"
        android:background="#ff41f39a"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/Welcome_FindFood"
        android:layout_alignEnd="@+id/Welcome_FindFood" />

</RelativeLayout>
